<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
	<servlet>
		<servlet-name>ShortUrlServlet</servlet-name>
		<servlet-class>com.github.xylsh.web.servlet.ShortUrlServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ShortUrlServlet</servlet-name>
		<url-pattern>/shorturl.do</url-pattern>
	</servlet-mapping>
	
	<servlet>
        <servlet-name>LongUrlServlet</servlet-name>
        <servlet-class>com.github.xylsh.web.servlet.LongUrlServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LongUrlServlet</servlet-name>
        <url-pattern>/longurl.do</url-pattern>
    </servlet-mapping>
    
</web-app>